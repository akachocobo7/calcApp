<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="AC"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/acButton" android:textSize="36sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resultText"
            app:layout_constraintEnd_toStartOf="@+id/cButton" android:layout_marginEnd="11dp"/>
    <Button
            android:text="C"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/cButton" android:textSize="36sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/resultText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="18dp"/>
    <Button
            android:text="x"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/mulButton" android:textSize="30sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/divButton"/>
    <Button
            android:text="÷"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/divButton" android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/cButton"/>
    <Button
            android:text="4"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/fourButton" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/sevenButton" app:layout_constraintEnd_toStartOf="@+id/fiveButton"
            android:layout_marginEnd="21dp"/>
    <Button
            android:text="6"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/sixButton" android:textSize="36sp" app:layout_constraintEnd_toStartOf="@+id/mulButton"
            android:layout_marginEnd="13dp" android:layout_marginTop="11dp"
            app:layout_constraintTop_toBottomOf="@+id/nineButton"/>
    <Button
            android:text="2"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/twoButton" android:textSize="36sp" app:layout_constraintEnd_toStartOf="@+id/threeButton"
            android:layout_marginEnd="22dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fiveButton"/>
    <Button
            android:text="1"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/oneButton" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fourButton" app:layout_constraintEnd_toStartOf="@+id/twoButton"
            android:layout_marginEnd="21dp"/>
    <Button
            android:text="3"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/threeButton" android:textSize="36sp" app:layout_constraintEnd_toStartOf="@+id/minusButton"
            android:layout_marginEnd="13dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/sixButton"/>
    <Button
            android:text="0"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/zeroButton" android:textSize="36sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/oneButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginBottom="19dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/dotButton" android:layout_marginEnd="21dp"/>
    <Button
            android:text="."
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/dotButton" android:textSize="36sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/twoButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintEnd_toStartOf="@+id/equalButton"
            android:layout_marginEnd="22dp"/>
    <Button
            android:text="="
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/equalButton" android:textSize="36sp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/threeButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="19dp" app:layout_constraintEnd_toStartOf="@+id/plusButton"
            android:layout_marginEnd="13dp"/>
    <Button
            android:text="+"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/plusButton" android:textSize="36sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/minusButton"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="19dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
    <Button
            android:text="−"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/minusButton" android:textSize="36sp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mulButton"/>
    <Button
            android:text="5"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/fiveButton" android:textSize="36sp"
            android:layout_marginTop="11dp" app:layout_constraintTop_toBottomOf="@+id/eightButton"
            app:layout_constraintEnd_toStartOf="@+id/sixButton" android:layout_marginEnd="22dp"/>
    <Button
            android:text="8"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/eightButton" android:textSize="36sp"
            android:layout_marginTop="92dp" app:layout_constraintTop_toBottomOf="@+id/resultText"
            app:layout_constraintEnd_toStartOf="@+id/nineButton" android:layout_marginEnd="22dp"/>
    <Button
            android:text="7"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/sevenButton" android:textSize="36sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="92dp"
            app:layout_constraintTop_toBottomOf="@+id/resultText" app:layout_constraintEnd_toStartOf="@+id/eightButton"
            android:layout_marginEnd="21dp"/>
    <Button
            android:text="9"
            android:layout_width="74dp"
            android:layout_height="68dp"
            android:id="@+id/nineButton" android:textSize="36sp" app:layout_constraintEnd_toStartOf="@+id/divButton"
            android:layout_marginEnd="13dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/acButton"/>
    <TextView
            android:text="0"
            android:layout_width="283dp"
            android:layout_height="52dp"
            android:id="@+id/resultText" android:textSize="36sp"
            android:gravity="right|center" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="51dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="50dp" android:layout_marginTop="37dp" app:layout_constraintTop_toTopOf="parent"
    />
</android.support.constraint.ConstraintLayout>